<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
<h2>User info</h2>
    <% if @user.errors.any? %>
  　<h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
  　<ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  　</ul>
　　<% end %>
<%= form_with model: @user do |f| %>
 <div class="form-group">
 <label for="user_name">Name</label>
 <%= f.text_field :name, class:"form-control name", autofocus: true, id:"user_name" %>
 </div>
 <div class="form-group">
 <label for="user_image">Image</label>
 <%= f.file_field :profile_image,class:"form-control-file user_image", id:"user_profile_image", accept:"image/*" %> 
 </div>
 <div class="form-group">
 <label for="user_Introduction">Introduction</label>
  <%= f.text_area :self_introduction, class:"form-control introduction", autofocus: true, id:"user_introduction"%>
 </div>
 <div>
 <%= f.submit "Update User",class:"btn btn-secondary" %>
</div>
  
  
  <% end %>
  